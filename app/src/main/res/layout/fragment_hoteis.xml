<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hipolito.hospedai.fragments.HoteisFragment">

    <android.support.design.widget.CoordinatorLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvHoteisFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtErroHoteis"
            android:text="Voce nao possui hoteis cadastrados! \n Para comeÃ§ar aperte em +"
            android:textStyle="bold"
            android:textSize="22dp"
            android:padding="6dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabAddHoteis"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
